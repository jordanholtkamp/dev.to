<div id="sidebar-wrapper-left" class="sidebar-wrapper sidebar-wrapper-left">
  <div class="sidebar-bg" id="sidebar-bg-left"></div>
  <div class="side-bar">
    <div class="user-sidebar">
      <%# cache user-profile-details-user.id-user.profile_updated_at for cache record, expires in 10 days  %>
      <% cache "user-profile-sidebar-profile-details-#{@user.id}-#{@user.profile_updated_at}", expires_in: 10.days do %>
      <%# user has mostly_work_with attribute then display the below widget and sidebar %>
        <% if @user.mostly_work_with.present? %>
          <div class="widget">
            <header>
              <h4>skills/languages</h4>
            </header>
            <div class="widget-body">
              <%= sanitized_sidebar @user.mostly_work_with %>
            </div>
          </div>
        <% end %>
        <%# user has currently_learning attribute then display the below widget and sidebar %>
        <% if @user.currently_learning.present? %>
          <div class="widget">
            <header>
              <h4>learning/trying</h4>
            </header>
            <div class="widget-body">
              <%= sanitized_sidebar @user.currently_learning %>
            </div>
          </div>
        <% end %>
        <%# user has currently_hacking_on attribute then display the below widget and sidebar %>
        <% if @user.currently_hacking_on.present? %>
          <div class="widget">
            <header>
              <h4>projects and hacks</h4>
            </header>
            <div class="widget-body">
              <%= sanitized_sidebar @user.currently_hacking_on %>
            </div>
          </div>
        <% end %>
        <%# user has available_for attribute then display the below widget and sidebar %>
        <% if @user.available_for.present? %>
          <div class="widget">
            <header>
              <h4>available for</h4>
            </header>
            <div class="widget-body">
              <%= sanitized_sidebar @user.available_for %>
            </div>
          </div>
        <% end %>
      <% end %>
      <%# cache lookup user using last_article_at last_comment_at, last_followed_at expires in 10 days %>
      <% cache "user-profile-sidebar-stats-#{@user.id}-#{@user.last_article_at}-#{@user.last_comment_at}-#{@user.last_followed_at}", expires_in: 10.days do %>
        <div class="sidebar-data">
          <div>
            <%# if user articles is 1 put "1 post published", if more than 1, put "2 posts published" %>
            <%= pluralize @user.articles.published.size, "Post" %> Published
          </div>
          <div>
            <%= pluralize @user.comments.where(deleted: false).size, "Comment" %> Written
          </div>
          <div>
            <%= pluralize @user.decorate.cached_followed_tags.size, "Tag" %> Followed
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
